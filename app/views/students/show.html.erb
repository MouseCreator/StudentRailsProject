<html>
  <h1>Hello</h1>
  <dl>
    <dt>Name:</dt>
    <dd><%= @student.name %></dd>

    <dt>Age:</dt>
    <dd><%= @student.age %></dd>

    <dt>Dorm:</dt>
    <dd><%= @student.dorm ? 'Yes' : 'No' %></dd>

    <dt>Language:</dt>
    <dd><%= @student.language %></dd>

    <dt>Teacher:</dt>
    <dd><%= @student.teacher ? 'Yes' : 'No' %></dd>

    <dt>University:</dt>
    <dd><%= @student.university %></dd>
  </dl>
  <%= link_to 'Edit', edit_student_path(@student) %> |
  <%= link_to 'Delete', student_path(@student), method: :delete %>
  <%= link_to 'Back', students_path %>
<!--
  EDIT button
  DELETE button
  BACK to Index button
-->
</html>